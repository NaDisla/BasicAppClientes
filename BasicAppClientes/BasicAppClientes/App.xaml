<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasicAppClientes.App">
    <Application.Resources>
        <Style TargetType="Button" x:Key="ControlesPrincipales">
            <Setter Property="BackgroundColor" Value="#a7d8db"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="BorderColor" Value="DarkCyan"/>
            <Setter Property="TextColor" Value="#186266" />
            <Setter Property="ContentLayout" Value="Top,0"/>
        </Style>
    </Application.Resources>
</Application>